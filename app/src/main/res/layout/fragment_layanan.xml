<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warna_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.home.fragment.LayananFragment">

    <TextView
        android:id="@+id/tvTitleLayanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Layanan Pengaduan"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginVertical="17dp"
        android:fontFamily="@font/dm_sans_medium"
        android:textColor="@color/warna_primary_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TransEvilz"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginVertical="17dp"
        android:fontFamily="@font/dm_sans_bold"
        android:textColor="@color/warna_auth_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleLayanan"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubTitle">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardLokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="54dp"
            app:layout_constraintTop_toTopOf="@id/constrainLokasi"
            app:layout_constraintStart_toStartOf="@+id/constrainLokasi"
            android:outlineSpotShadowColor="@color/black">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/warna_verifikasi_font">

                <ImageView
                    android:id="@+id/ivLokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_map"
                    android:gravity="center"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Kantor"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardLokasi"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Jl Raya Pegangsaan Timur No 123, Jakarta Timur, 55990"
            android:textSize="14sp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/dm_sans_medium"
            android:textColor="@color/warna_font_hari"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="38dp"
            app:layout_constraintTop_toTopOf="@+id/constrainLokasi"
            app:layout_constraintStart_toEndOf="@+id/cardLokasi"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dividerViewSatu"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_field"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrainLokasi" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerViewSatu">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="54dp"
            app:layout_constraintTop_toTopOf="@id/constrainEmail"
            app:layout_constraintStart_toStartOf="@+id/constrainEmail"
            android:outlineSpotShadowColor="@color/black">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/warna_verifikasi_font">

                <ImageView
                    android:id="@+id/ivEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mail"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="65dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardEmail"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="transevilz@evil.id"
            android:textSize="14sp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/dm_sans_medium"
            android:textColor="@color/warna_font_hari"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="38dp"
            app:layout_constraintTop_toTopOf="@+id/constrainEmail"
            app:layout_constraintStart_toEndOf="@+id/cardEmail"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dividerViewDua"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_field"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrainEmail" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainWa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerViewDua">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardWa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="54dp"
            app:layout_constraintTop_toTopOf="@id/constrainWa"
            app:layout_constraintStart_toStartOf="@+id/constrainWa"
            android:outlineSpotShadowColor="@color/black">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/warna_verifikasi_font">

                <ImageView
                    android:id="@+id/ivWa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_wa"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsApp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardWa"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="WA Bisnis"
            android:textSize="14sp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/dm_sans_medium"
            android:textColor="@color/warna_font_hari"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="38dp"
            app:layout_constraintTop_toTopOf="@+id/constrainWa"
            app:layout_constraintStart_toEndOf="@+id/cardWa"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dividerViewTiga"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_field"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrainWa" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerViewTiga">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="54dp"
            app:layout_constraintTop_toTopOf="@id/constrainCall"
            app:layout_constraintStart_toStartOf="@+id/constrainCall"
            android:outlineSpotShadowColor="@color/black">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/warna_verifikasi_font">

                <ImageView
                    android:id="@+id/ivCallCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Center"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardCall"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="+62 1234 5678 9101"
            android:textSize="14sp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/dm_sans_medium"
            android:textColor="@color/warna_font_hari"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="38dp"
            app:layout_constraintTop_toTopOf="@+id/constrainCall"
            app:layout_constraintStart_toEndOf="@+id/cardCall"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dividerViewEmpat"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_field"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrainCall" />

    <TextView
        android:id="@+id/tvDescSatu"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_medium"
        android:text="Untuk keperluan yang lebih lanjut silakan datang langsung ke kantor"
        android:textColor="@color/warna_secondary_font"
        android:textSize="12sp"
        android:layout_marginVertical="33dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerViewEmpat" />



</androidx.constraintlayout.widget.ConstraintLayout>